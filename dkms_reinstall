mod=$1
ver=$2

sudo modprobe -r $mod-en $mod-stor $mod-core
sudo dkms remove -m $mod -v $ver --all
sudo dkms add -m $mod -v $ver
sudo dkms build -m $mod -v $ver
sudo dkms install -m $mod -v $ver --force
FILE=/var/lib/dkms/gzd/5.0/build/make.log
if test -f "$FILE";then
	cat $FILE
#else
#	bash ./modprobe.sh
#	lsmod | grep gzd
fi
